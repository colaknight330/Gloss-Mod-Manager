{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gloss-mod-manage",
  "version": "2.0.0",
  "identifier": "gmm.aoe.top",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gloss Mod Manage",
        "width": 1280,
        "height": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico",
      "icons/icon.png"
    ]
  }
}